{
  "manifest_version": 3,
  "name": "Download Controller",
  "version": "1.0",
  "description": "Allows or denies all downloads based on a configurable constant.",
  "background": {
    "service_worker": "background.js"
  },

  "action":{
    "default_popup": "setup.html"
  },

  "side_panel": {
    "default_path": "sidePanel.html"
  },

  "permissions": [
    "downloads",
    "webRequest",
    "storage",
    "windows",
    "nativeMessaging",
    "sidePanel",
    "offscreen"
  ],

  "host_permissions": [
    "file:///*"
  ]
}